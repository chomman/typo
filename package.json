{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/jest/"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "start": "npm run build:prod",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "npm run lint:file -- '*.ts' 'src/**/*.ts'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:hot": "cross-env NODE_ENV=development HOT_MODULES=true node-dev -r ts-node/register src/webpack/server.ts",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.2.0",
    "@types/hapi": "^16.1.10",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "@types/webpack": "^3.0.14",
    "@types/webpack-env": "^1.13.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.5",
    "hapi": "^16.6.2",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "node-dev": "^3.1.3",
    "normalize.css": "^7.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^21.1.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-immutable": "^4.4.0",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.6.1",
    "wcb": "^0.5.2",
    "webpack": "^3.8.1"
  }
}
