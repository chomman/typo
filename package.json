{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:watch": "npm run test -- --watch",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "server": "npm run server:dev",
    "server:dev": "cross-env NODE_ENV=development nodemon src/bin/app.ts",
    "server:prod": "cross-env NODE_ENV=production ts-node src/bin/app"
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "hapi": "^17.6.2"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.5.1",
    "@types/hapi": "^17.6.2",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.2",
    "@types/webpack": "^4.4.17",
    "cross-env": "^5.2.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.5",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-immutable": "^4.9.0",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.1.6",
    "typescript-tslint-plugin": "0.0.4",
    "wcb": "^0.9.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  }
}
