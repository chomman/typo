{
  "name": "App",
  "description": "Application description",
  "author": "John Doe <john.doe@gmail.com>",
  "version": "0.0.1",
  "main": "./dist/bin/app.js",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "build": {
    "files": [
      "dist/assets/",
      "dist/bin/",
      "node_modules/",
      "package.json"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/jest/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && build && npm run clean",
    "clean": "trash dist/assets dist/bin",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "npm run lint:file -- '*.ts' 'src/**/*.ts' && tsc --noEmit",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:base": "electron -r ts-node/register src/bin/app.ts",
    "server:dev": "cross-env NODE_ENV=development npm run server:base",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:prod": "cross-env NODE_ENV=production npm run server:base",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.3.1",
    "@types/hapi": "^17.0.9",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.2",
    "@types/webpack": "^4.1.3",
    "@types/webpack-env": "^1.13.5",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "electron": "^1.8.4",
    "electron-builder": "^20.8.1",
    "hapi": "^17.3.1",
    "hapi-webpack-plugin": "^3.0.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "normalize.css": "^8.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-immutable": "^4.5.3",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.8.1",
    "wcb": "^0.6.5",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  }
}
