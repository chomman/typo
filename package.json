{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/jest/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "start": "npm run build:prod",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "npm run lint:file -- '*.ts' 'src/**/*.ts'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:hot": "cross-env NODE_ENV=development HOT_MODULES=true node-dev -r ts-node/register src/webpack/server.ts",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.3.1",
    "@types/hapi": "^17.0.9",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.2",
    "@types/webpack": "^4.1.3",
    "@types/webpack-env": "^1.13.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "hapi": "^17.3.1",
    "hapi-webpack-plugin": "^3.0.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "node-dev": "^3.1.3",
    "normalize.css": "^8.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-immutable": "^4.5.3",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.8.1",
    "wcb": "^0.6.4",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.13"
  }
}
