{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/jest/"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "npm run lint:file -- '*.ts' 'src/**/*.ts'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "server": "npm run server:dev",
    "server:dev": "cross-env NODE_ENV=development node-dev -r ts-node/register src/bin/app.ts",
    "server:prod": "cross-env NODE_ENV=production ts-node --fast src/bin/app"
  },
  "dependencies": {
    "dotenv": "^5.0.1",
    "hapi": "^17.3.1"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.3.1",
    "@types/hapi": "^17.0.8",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.2",
    "@types/webpack": "^4.1.3",
    "cross-env": "^5.1.4",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "node-dev": "^3.1.3",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-immutable": "^4.5.3",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.8.1",
    "wcb": "^0.6.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.13"
  }
}
