{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-tests.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint --type-check --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:dev": "cross-env NODE_ENV=development node-dev -r ts-node/register src/bin/app.ts",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:prod": "cross-env NODE_ENV=production ts-node --fast src/bin/app",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "hapi": "^16.4.3",
    "inert": "^4.2.0"
  },
  "devDependencies": {
    "@types/hapi": "^16.1.6",
    "@types/inert": "^4.2.2",
    "@types/jest": "^20.0.4",
    "@types/node": "^8.0.14",
    "@types/webpack": "^3.0.4",
    "@types/webpack-env": "^1.13.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "eslint-config-jupl": "^0.6.2",
    "file-loader": "^0.11.2",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^20.0.0",
    "jest-cli": "^20.0.4",
    "node-dev": "^3.1.3",
    "normalize.css": "^7.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^20.0.7",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.4.1",
    "wcb": "^0.3.5",
    "webpack": "^3.3.0"
  }
}
