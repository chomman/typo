{
  "name": "application",
  "version": "0.0.1",
  "private": true,
  "bin": "app/bin.js",
  "engines": {
    "node": "^6.0.0 || ^7.0.0",
    "npm": "^3.0.0 || ^4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/common/setup-tests.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && npm run build:server && npm pack && npm run clean",
    "clean": "trash '**/*.js' build static '!assets/**' '!node_modules/**'",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint --type-check --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:dev": "cross-env NODE_ENV=development node-dev -r ts-node/register app/server.ts",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:prod": "cross-env NODE_ENV=production ts-node --fast app/server",
    "build": "npm run clean && webpack",
    "build:server": "tsc --project tsconfig.build.json && cross-env NODE_ENV=production babili build -d . --plugins transform-node-env-inline",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "hapi": "^16.1.1",
    "hapi-es7-async-handler": "^1.0.6",
    "hapiour-decorators": "^1.2.0",
    "inert": "^4.2.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.0.0",
    "@types/globule": "^1.1.3",
    "@types/hapi": "^16.0.0",
    "@types/inert": "^4.2.0",
    "@types/jest": "^19.2.2",
    "@types/node": "^7.0.0",
    "@types/webpack": "^2.2.14",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.2",
    "babel-plugin-transform-inline-environment-variables": "^0.0.2",
    "babel-plugin-transform-node-env-inline": "^0.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babili-webpack-plugin": "^0.0.11",
    "babel-preset-env": "^1.4.0",
    "babili": "^0.0.12",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "eslint-config-jupl": "^0.5.3",
    "file-loader": "^0.11.1",
    "globule": "^1.1.0",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^19.0.2",
    "node-dev": "^3.1.3",
    "style-loader": "^0.16.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^19.0.6",
    "ts-node": "^3.0.2",
    "tslint": "^4.1.0",
    "typescript": "^2.1.4",
    "webpack": "^2.4.1"
  }
}
