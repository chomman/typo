{
  "name": "app",
  "description": "Application description",
  "author": "John Doe <john.doe@gmail.com>",
  "version": "0.0.1",
  "main": "./static/main.js",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "build": {
    "files": [
      "node_modules/",
      "static/",
      "package.json"
    ]
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-tests.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && build && npm run clean",
    "clean": "trash static",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint --type-check --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:base": "electron -r ts-node/register src/bin/app.ts",
    "server:dev": "cross-env NODE_ENV=development npm run server:base",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:prod": "cross-env NODE_ENV=production npm run server:base",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "@types/hapi": "^16.1.2",
    "@types/jest": "^20.0.4",
    "@types/node": "^8.0.14",
    "@types/webpack": "^3.0.4",
    "@types/webpack-env": "^1.13.0",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.1",
    "electron": "^1.7.2",
    "electron-builder": "^19.16.1",
    "eslint-config-jupl": "^0.6.2",
    "hapi": "^16.1.1",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^20.0.0",
    "jest-cli": "^20.0.4",
    "normalize.css": "^7.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^20.0.0",
    "ts-node": "^3.0.2",
    "tslint": "^5.2.0",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.1.4",
    "wcb": "^0.4.0",
    "webpack": "^3.3.0"
  }
}
