{
  "name": "app",
  "description": "Application description",
  "author": "John Doe <john.doe@gmail.com>",
  "version": "0.0.1",
  "main": "./static/main.js",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "build": {
    "files": [
      "node_modules/",
      "static/",
      "package.json"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/jest/"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && build && npm run clean",
    "clean": "trash static",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "npm run lint:file -- '*.ts' 'src/**/*.ts'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:base": "electron -r ts-node/register src/bin/app.ts",
    "server:dev": "cross-env NODE_ENV=development npm run server:base",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:prod": "cross-env NODE_ENV=production npm run server:base",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.1.1",
    "@types/hapi": "^16.1.10",
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.46",
    "@types/webpack": "^3.0.13",
    "@types/webpack-env": "^1.13.2",
    "cross-env": "^5.1.0",
    "css-loader": "^0.28.7",
    "electron": "^1.7.9",
    "electron-builder": "^19.37.2",
    "hapi": "^16.6.2",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "normalize.css": "^7.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-immutable": "^4.4.0",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.5.3",
    "wcb": "^0.5.2",
    "webpack": "^3.8.1"
  }
}
