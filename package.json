{
  "name": "App",
  "description": "Application description",
  "author": "John Doe <john.doe@gmail.com>",
  "version": "0.0.1",
  "main": "./dist/bin/app.js",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "build": {
    "files": [
      "dist/assets/",
      "dist/bin/",
      "node_modules/",
      "package.json"
    ]
  },
  "scripts": {
    "package": "npm run build:prod && build && npm run clean",
    "clean": "trash dist/assets dist/bin",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file -- '*.ts' 'src/**/*.ts'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:base": "electron -r ts-node/register src/bin/app.ts",
    "server:dev": "cross-env NODE_ENV=development npm run server:base",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:prod": "cross-env NODE_ENV=production npm run server:base",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.5.1",
    "@types/hapi": "^17.0.12",
    "@types/jest": "^23.0.0",
    "@types/node": "^10.3.1",
    "@types/webpack": "^4.4.0",
    "@types/webpack-env": "^1.13.6",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.3",
    "hapi": "^17.5.1",
    "hapi-webpack-plugin": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "lint-staged": "^7.1.3",
    "normalize.css": "^8.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-immutable": "^4.5.4",
    "tslint-language-service": "^0.9.9",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.1",
    "wcb": "^0.9.0",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.2"
  }
}
