{
  "name": "App",
  "description": "Application description",
  "author": "John Doe <john.doe@gmail.com>",
  "version": "0.0.1",
  "main": ".dist/bin/app.js",
  "private": true,
  "build": {
    "files": [
      ".dist/assets/",
      ".dist/bin/",
      "node_modules/",
      "package.json"
    ]
  },
  "scripts": {
    "package": "npm run build:prod && build && npm run clean",
    "clean": "trash .dist/assets .dist/bin",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:update": "npm run test -- -u",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:dev",
    "server:dev": "cross-env HOT_MODULES=true ELECTRON_DISABLE_SECURITY_WARNINGS=true electron -r ts-node/register/type-check src/bin/app.ts",
    "server:prod": "cross-env NODE_ENV=production ELECTRON_DISABLE_SECURITY_WARNINGS=true electron -r ts-node/register/transpile-only src/bin/app.ts",
    "build:dev": "npm run clean && webpack",
    "build:prod": "cross-env NODE_ENV=production npm run build:dev"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.5.1",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.3",
    "@types/webpack": "^4.4.18",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/webpack-env": "^1.13.6",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "electron": "^3.0.8",
    "electron-builder": "^20.33.2",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.0.4",
    "normalize.css": "^8.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-immutable": "^4.9.1",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.1.6",
    "typescript-tslint-plugin": "0.0.5",
    "wcb": "^0.11.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
