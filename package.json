{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/setup-tests.ts",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "npm run lint:file -- '*.ts' 'src/**/*.ts'",
    "lint:file": "tslint --fix --project tsconfig.json",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:dev": "cross-env NODE_ENV=development node-dev -r ts-node/register src/bin/app.ts",
    "server:hot": "cross-env HOT_MODULES=true npm run server:dev",
    "server:prod": "cross-env NODE_ENV=production ts-node --fast src/bin/app",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "hapi": "^16.6.2",
    "inert": "^4.2.1"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.1.1",
    "@types/hapi": "^16.1.10",
    "@types/inert": "^4.2.3",
    "@types/jest": "^21.1.4",
    "@types/node": "^8.0.46",
    "@types/webpack": "^3.0.13",
    "@types/webpack-env": "^1.13.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.0",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.5",
    "hapi-webpack-plugin": "^2.0.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "node-dev": "^3.1.3",
    "normalize.css": "^7.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-immutable": "^4.4.0",
    "tslint-language-service": "^0.9.6",
    "typescript": "^2.5.3",
    "wcb": "^0.5.2",
    "webpack": "^3.8.1"
  }
}
