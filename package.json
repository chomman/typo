{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "npm run build:prod",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file -- '*.ts' 'src/**/*.ts'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:hot": "cross-env NODE_ENV=development HOT_MODULES=true node-dev -r ts-node/register src/webpack/server.ts",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.5.1",
    "@types/hapi": "^17.0.12",
    "@types/jest": "^23.0.0",
    "@types/node": "^10.3.1",
    "@types/webpack": "^4.4.0",
    "@types/webpack-env": "^1.13.6",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "hapi": "^17.5.1",
    "hapi-webpack-plugin": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "lint-staged": "^7.1.3",
    "node-dev": "^3.1.3",
    "normalize.css": "^8.0.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-immutable": "^4.5.4",
    "tslint-language-service": "^0.9.9",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.1",
    "wcb": "^0.9.0",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.2"
  }
}
