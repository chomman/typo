{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file -- '*.ts' 'src/**/*.ts'",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:watch": "npm run test -- --watch",
    "build": "npm run clean && webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "server": "npm run server:dev",
    "server:dev": "cross-env NODE_ENV=development node-dev -r ts-node/register/type-check src/bin/app.ts",
    "server:prod": "cross-env NODE_ENV=production ts-node src/bin/app"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "hapi": "^17.5.1"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.5.1",
    "@types/hapi": "^17.0.12",
    "@types/jest": "^23.0.0",
    "@types/node": "^10.3.1",
    "@types/webpack": "^4.1.3",
    "cross-env": "^5.1.6",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "lint-staged": "^7.1.3",
    "node-dev": "^3.1.3",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-immutable": "^4.5.4",
    "tslint-language-service": "^0.9.9",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.1",
    "wcb": "^0.9.0",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.2"
  }
}
