{
  "compilerOptions": {
    "allowJs": true,
    "maxNodeModuleJsDepth": 1,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "plugins": [
      {"name": "tslint-language-service"}
    ],
    "strict": true,
    "target": "es2017"
  }
}
