{
  "compilerOptions": {
    "allowJs": true,
    "maxNodeModuleJsDepth": 1,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {"name": "tslint-language-service"}
    ],
    "strictNullChecks": true,
    "target": "es2017"
  },
  "include": [
    "src",
    "*.ts"
  ]
}
